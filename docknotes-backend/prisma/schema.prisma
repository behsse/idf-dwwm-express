generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id            Int          @id @default(autoincrement())
  name          String 
  description   String?
  notes Note[]

  @@map("categories")
}

model Note {
  id            Int         @id @default(autoincrement())
  title         String?
  color         String?
  content       String?
  date          DateTime?
  isFavorite    Boolean    @default(false)
  category_id   Int?
  category      Category?  @relation(fields: [category_id], references: [id])

  @@map("notes")
}